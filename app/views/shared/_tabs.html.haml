:coffeescript
  $ ->
    $("nav ul li:eq(1)").mouseover(->
      $("ul.submenu").css("margin-left", -$("nav ul li:eq(1)").width())
      $("ul.submenu").css("visibility", "visible")
    )
    $("nav ul li:eq(1)").mouseout(->
      $("ul.submenu").css("visibility", "hidden")
    )
    


.center-fixed
  %ul.mini-language-picker
    %li
      %a{href: '?locale=ba', class: "#{I18n.locale == :ba ? 'active' : ''}"} BIH
    %li
      %a{href: '?locale=en', class: "#{I18n.locale == :en ? 'active' : ''}"} ENG
    %li
      %a{href: '?locale=hr', class: "#{I18n.locale == :hr ? 'active' : ''}"} HRV
    %li
      %a{href: '?locale=mk', class: "#{I18n.locale == :mk ? 'active' : ''}"} MAK
    %li
      %a{href: '?locale=sr', class: "#{I18n.locale == :sr ? 'active' : ''}"} SRB
  %nav
    %ul
      %li
        %a{href: '/home', class: "#{active_tab == :home ? 'active' : ''}"}= t(:home)
      %li
        %a{href: '/trafficking', class: "#{active_tab == :trafficking ? 'active' : ''}"}= t(:trgovina_ljudima)
        %ul.submenu
          %li
            %a{href: '/trafficking#definicija', 'data-slide' => '1'}= t(:definicija)
          %li
            %a{href: '/trafficking#prava_zrtava', 'data-slide' => '2'}= t(:prava_zrtava_x)
          %li
            %a{href: '/trafficking#statisticki_podaci', 'data-slide' => '3'}= t(:statisticki_podaci)
          %li
            %a{href: '/trafficking#trendovi_u', 'data-slide' => '4'}= t(:trendovi_u)

      %li
        %a{href: '/about', class: "#{active_tab == :about ? 'active' : ''}"}= t(:o_projektu)
      %li
        %a{href: '/compensation', class: "#{active_tab == :compensation ? 'active' : ''}"}= t(:o_kompenzaciji)
      %li
        %a{href: '/news', class: "#{active_tab == :news ? 'active' : ''}"}= t(:vesti_i_press)
      %li
        %a{href: '/documents', class: "#{active_tab == :documents ? 'active' : ''}"}= t(:dokumenti_i_izvjestaji)
      %li.stretch
